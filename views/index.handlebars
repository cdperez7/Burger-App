<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center" id="top-bar">
            <h1>Burgers to eat</h1>
        </div>

        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.eaten}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.id}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form methods="POST" action="/burgers/update?_method=PUT" class-"button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <button type="submit" class="btn btn-default">Eat the burger</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
                {{#if this.eaten}}
                <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
                {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-xs-12 text-center enter_section">
            <form action="/burgers/create" method="POST">
            <input type="text"name="burger_name" class="form-control" value="" id="enter_text">
            <button type="submit" class="btn btn-primary" id="text-enter-button">Submit Burger</button>
            </form>
            <p>Enter new burger here</p>
        </div>
    </div>
</div>